
@{
    ViewData["Title"] = "Nesting";
}

<h2>Nesting</h2>
<a href="https://getbootstrap.com/docs/4.0/layout/grid/#nesting">
    https://getbootstrap.com/docs/4.0/layout/grid/#nesting
</a>
<div class="container">
    <div class="row">
        <div class="col-sm-9">
            Level 1: .col-sm-9
            <div class="row">
                <div class="col-8 col-sm-6">
                    Level 2: .col-8 .col-sm-6
                </div>
                <div class="col-4 col-sm-6">
                    Level 2: .col-4 .col-sm-6
                </div>
            </div>
        </div>
    </div>
</div>